<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.devMode" value="false" />

	<package name="score3" extends="struts-default" namespace="/">
	
		<!-- 配置管理员的Action -->
		<action name="admin_*" class="adminAction" method="{1}">
            <result name="loginSuccess">/WEB-INF/jsp/index.jsp</result>              
            <result name="loginFailed">/</result>           
           <!--  <result name="jump2addStu">/WEB-INF/jsp/createStu.jsp</result>    -->   
        </action>
        <!-- 学生Action -->
        <action name="stu_*" class="studentAction" method="{1}">         
            <result name="findAll">/WEB-INF/jsp/userList.jsp</result>  
            <result name="list">/WEB-INF/jsp/userList.jsp</result>     
        </action>
        <!-- 学院Action-->
         <action name="academy_*" class="academyAction" method="{1}">  
         	<!-- 在slideBar点击新建学生 请求学院数据 -->       
            <result name="findAllAcademy">/WEB-INF/jsp/createStu.jsp</result>    
        </action>
		
	</package>
</struts>
